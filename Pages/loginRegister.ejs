<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PLACEPAL</title>
    <link rel="stylesheet" href="/styles.css" />
    <!-- Link to external CSS -->
  </head>

  <body>
    <div class="container">
      <h2>Uni Feedback</h2>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="error-box">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form action="/submit-feedback" method="POST">
        <label for="rating">Account :</label>
        <select id="courseYear" name="Year" required>
          <option value="6">Postgraduate Masters</option>
          <option value="5">5th year (Undergraduate Masters)</option>
          <option value="4">4th Year (Undergraduate Bachelors)</option>
          <option value="3">3rd Year</option>
          <option value="2">2nd Year</option>
          <option value="1">1st Year</option>
        </select>

        <label for="name">Your Name</label>
        <input type="text" id="name" name="name" />

        <label for="email">Email </label>
        <input type="email" id="email" name="email" />

        <label for="course">Course Name:</label>
        <input type="text" id="course" name="course" required />

        <label for="professor">University:</label>
        <input type="text" id="professor" name="professor" required />

        <label for="rating">Course Year: </label>
        <select id="courseYear" name="Year" required>
          <option value="6">Postgraduate Masters</option>
          <option value="5">5th year (Undergraduate Masters)</option>
          <option value="4">4th Year (Undergraduate Bachelors)</option>
          <option value="3">3rd Year</option>
          <option value="2">2nd Year</option>
          <option value="1">1st Year</option>
        </select>

        <label for="comments">Additional Comments:</label>
        <textarea id="comments" name="comments" rows="4"></textarea>

        <button type="submit">Create Account</button>

        <textarea>Already have an account? Sign in below!</textarea>

        <a href="Login.ejs">
          <button type="login">Login Here</button>
        </a>

        <script>
          document
            .querySelector("form")
            .addEventListener("submit", function (event) {
              let name = document.get;
            });
        </script>
      </form>

      <p><a href="/">Back to Home</a></p>
    </div>
  </body>
</html>
